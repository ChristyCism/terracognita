<div class="container signinform">
<div class="banner signup-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/earlyad/image/upload/v1543249479/terracognita/l5lfb3uyixp6dkcse4sg.jpg');">
<div class="banner-content">
<h1>Se connecter</h1>

</div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                :label => 'Email',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
    :label => 'Mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>

  </div>
  <div class="signup-links password">
    <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %>
  </div>

  <div class="form-actions">
    <%= f.input :remember_me, :label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Se connecter", class: "btn btn-home btn-lg btn-final" %>
    </div>


<div class="form-actions form-actions-last"=>
  <p>Pas encore de compte ?</p>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-home btn-lg btn-final-transparent" %>
</div>
<% end %>
</div>

<div class="wrapper">
  <div class="container">

<div class="orientation" id="orientation">

          <h3>J'ajuste l'orientation de mon potager</h3>

          <div class="grid">
            <div class="compass">
              <div class="potager-final"></div>
              <div class="drag-rotate"><p class="text-center">N<br><i class="fas fa-sync"></i><br>S</p></div>
            </div>
            <div class="icons">
              <div class="bottom-tag">Depuis ce point de vue </div>
              <div class="farmer">
              <%= cl_image_tag("terracognita/farmer",
              width: 80) %>
              </div>
              <div class="bottom-tag"> j'indique o√π est le sud !</div>
            </div>
          </div>

          <div class="formulaire">
            <div class="form">
              <%= form_for @potager, url: wizard_path, method: :put do |f| %>
              <%= f.hidden_field :orientation %><br />

              <button type="submit" class="nav-arrow">
                <i class="fas fa-angle-right"></i>
              </button>
              <% end %>
            </div>
            <%= link_to previous_wizard_path, class: "nav-arrow-back" do %>
      <i class="fas fa-angle-left"></i>
      <% end %>
          </div>

          <div class="list-inline text-center">
            <li><a class="continue btn btn-primary" href=#dimensions>Retour</a></li>
          </div>
          <%= render 'shared/progressbar' %>
        </div>

    </div>
  </div>


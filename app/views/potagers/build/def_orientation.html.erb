<div class="wrapper">
  <div class="container">
    <div class="orientation" id="orientation">
      <h3>J'ajuste l'orientation de mon potager</h3>
      <div class="grid">
        <% height = (@potager.length * 50) %>
        <% width = (@potager.width * 50) %>
        <div class="potager-final" style="height: <%= height %>px; width: <%= width %>px;">
          <div class="drag-rotate"><p class="text-center">N<br><i class="fas fa-sync"></i><br>S</p></div>
        </div>
      </div>
      <div class="icons">
        <p class="farmer">
          <i class="fas fa-map-marker-alt"></i> <br>
        </p>
        <div class="bottom-tag">Depuis ce point de vue, j'indique o√π est le Sud. </div>
      </div>

      <div class="formulaire">
        <div class="form">
          <%= form_for @potager, url: wizard_path, method: :put do |f| %>
          <%= f.text_field :orientation %><br />
          <button type="submit" class="nav-arrow">
            <i class="fas fa-angle-right"></i>
          </button>
          <% end %>
        </div>
        <%= link_to previous_wizard_path, class: "nav-arrow-back" do %>
          <i class="fas fa-angle-left"></i>
        <% end %>
      </div>
      <%= render 'shared/progressbar' %>
    </div>
      </div>

    </div>


<div class="wrapper">
  <div class="container">

    <div class="introduction">
      <h1>Avant de commencer ...</h1>
      <h2>je m'assure de connaître</h2>
      <div class="row intro">
        <div class="col-xs-12 col-sm-6">
          <div class="introknow">
          les <strong>dimensions</strong> de mon potager

            <div class="intro-image">
            <%= cl_image_tag("terracognita/ruler",
                  width: 50) %>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="introknow">
            l'<strong>orientation</strong> de mon potager <br> <span class="intro-span">(Nord / Sud)</span>
            <div class="intro-image">
              <%= cl_image_tag("terracognita/compass",
              width: 50) %>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="introknow">
            le <strong>type</strong> de ma terre <br><span class="intro-span">(argileux, sableux, limoneux, humifère ou calcaire)</span>
            <div class="intro-image">
              <%= cl_image_tag("terracognita/shovel",
              width: 50) %>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="introknow">
            le <strong>mois</strong> où je souhaite me lancer
            <div class="intro-image">
              <%= cl_image_tag("terracognita/calendar",
                  width: 50) %>
            </div>
          </div>
        </div>
      </div>
      <div>
      <%= form_for @potager, url: wizard_path, method: :put do |f| %>
        <%= f.submit "C'est parti !", class: "continue btn btn-primary" %>
        <% end %>
      </div>
      <%= render 'shared/progressbar' %>
    </div>
  </div>
</div>

